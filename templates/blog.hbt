{{> header }}

<ul id="home_grid" class="hAtom posts block-two">
    {{#each (limit collections.posts this.pagination.end this.pagination.start)}}
    <li class="hentry post">
        <div class="post_type type_{{ this.collection }}"></div>
        <h2 class="entry-title">
            <a href="{{ ../baseUrl }}/{{ this.path }}" rel="bookmark">{{ this.title }}</a>
        </h2>
        {{#if this.feat_img}}
            <div class="post_feat_img">
                <img class="post_feat_img" alt="" src="/images/feat_imgs/{{ this.feat_img }}">
            </div>
        {{/if}}

        {{#if this.images}}
            <div class="post_feat_img">
                <img class="post_feat_img" alt="" src="/images/{{ this.img_folder }}/{{ this.images.[0] }}">
            </div>
        {{/if}}
        <article class="entry-summary">
            {{{ this.excerpt }}}
        </article>
        <footer>
            {{#if this.author}}
                <div class="author info grey">By {{ this.author }}</div>
            {{/if}}

            <a href="{{ ../baseUrl }}/{{ this.path }}" class="button">Read More</a>
        </footer>
    </li>
    {{/each}}
    
    {{#if this.pagination}}
        <nav class="pagination">
            {{#if this.pagination.next}}
                <a href="{{ baseUrl }}/{{this.pagination.next.path}}" class="pagination__link--older">&lt; Older</a>
            {{/if}}
        
            {{#if this.pagination.prev}}
                <a href="{{ baseUrl }}/{{this.pagination.prev.path}}" class="pagination__link--newer">Newer &gt;</a>
            {{/if}}
            
        </nav>
    {{/if}}
</ul>

<script src="{{ baseUrl }}/js/init_grid.js"></script>

{{> footer }}